{
  "name": "claude-gladiator-mcp",
  "version": "0.1.0",
  "description": "Continuous learning MCP server for Claude Code â€” observe patterns, reflect on them, evolve your workflow",
  "type": "module",
  "main": "./dist/index.js",
  "bin": {
    "claude-gladiator-mcp": "./dist/index.js"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "typecheck": "tsc --noEmit",
    "test": "npm run typecheck && npm run lint",
    "prepublishOnly": "npm run build && npm run lint && npm run format:check",
    "prepare": "husky || true"
  },
  "keywords": [
    "claude",
    "claude-code",
    "mcp",
    "mcp-server",
    "learning",
    "continuous-learning",
    "observation",
    "pattern-recognition",
    "npx",
    "zero-install",
    "anthropic",
    "llm",
    "developer-tools"
  ],
  "author": "Vvkmnn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vvkmnn/claude-gladiator-mcp.git"
  },
  "homepage": "https://github.com/Vvkmnn/claude-gladiator-mcp#readme",
  "bugs": {
    "url": "https://github.com/Vvkmnn/claude-gladiator-mcp/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/Vvkmnn"
  },
  "publishConfig": {
